.header.clearfix
  nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
    .container
      a.navbar-brand(href="/") Eventbrite
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarsExampleDefault", aria-controls="navbarsExampleDefault", aria-expanded="false", aria-label="Toggle navigation")

      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.ml-auto
          li.nav-item
            a.nav-link(href="/questions")  BROWSE EVENT
          li.nav-item
            a.nav-link(href="/users") USERS
          if (!currentUser) 
            li.nav-item
              a.nav-link(href='/signin') SIGN IN
            li.nav-item
              a.nav-link(href='/users/new') SIGNUP
          else
            li.nav-item
              a.nav-link(href=`/users/${currentUser._id}`) MY PROFILE
            li.nav-item
              a.nav-link(href='/signout') SINGOUT
        
          
