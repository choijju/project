.form-group
  label(for="title") EVENT TITLE
  input.form-control(type="text", name="title", placeholder="Give it a short distinct name", value=question.title)
.form-group
  label(for="location") LOCATION
  input.form-control(type="text", name="location", placeholder="Search for a venue or address", value=question.location)
.form-group
  label(for="date") DATE & TIME
  .row
   .col-md-3
    input.form-control(type="date", name="date", value=question.date)
   .col-md-3
    input.form-control(type="time", name="time", value=question.time)
   .col-md-3
    input.form-control(type="date", name="date", value=question.date)
   .col-md-3
    input.form-control(type="time", name="time", value=question.time)
.form-group
  label(for="question") ORANIZER DESCRIPTION
  textarea.form-control(name="content2", placeholder="All of the required organizer information", row="1")= question.content2
.form-group
  label(for="question") EVENT DESCRIPTION
  textarea.form-control(name="content", placeholder="All of the required event information", rows="5")= question.content
.form-group
  label(for="type") EVENT TYPE
  select.form-control(type="text", name="type", value=question.type)
   option(value="Type is not set") Select the type of event
   option(value="Appearance or Singing") Appearance or Singing
   option(value="Attraction") Attraction
   option(value="Camp, Trip or Retreat") Camp, Trip or Retreat
   option(value="Class, Training or Workshop") Class, Training or Workshop
   option(value="Concert or Performance") Concert or Performance
   option(value="Conference") Conference
   option(value="Convention") Convention
   option(value="Dinner or Gala") Dinner or Gala
   option(value="Festival or Fair") Festival or Fair
   option(value="Game or Competition") Game or Competition
   option(value="Meeting or Networking Event") Meeting or Networking Event
   option(value="Othor") Othor
   option(value="Party or Social Gathering") Party or Social Gathering
   option(value="Race or Endurance Event") Race or Endurance Event
   option(value="Rally") Rally
   option(value="Screening") Screening
   option(value="Seminor or Talk") Seminor or Talk
   option(value="Tour") Tour
   option(value="Tourment") Tourment
   option(value="Tradeshow, Consumer Show or Expo") Tradeshow, Consumer Show or Expo
.form-group
  label(for="topic") EVENT TOPIC
  select.form-control(type="text", name="topic", value=question.topic)
   option(value="Topic is not set") Select a topic
   option(value="Auto, Boat & Air") Auto, Boat & Air
   option(value="Business & professional") Business & professional 
   option(value="Charity & Causes") Charity & Causes
   option(value="Community & Culture") Community & Culture
   option(value="Family & Education") Family & Education
   option(value="Fashion & Beauty") Fashion & Beauty
   option(value="Film, Media & Entertainment") Film, Media & Entertainment
   option(value="Food & Drink") Food & Drink
   option(value="Government & Politics") Government & Politics
   option(value="Health & Wellness") Health & Wellness
   option(value="Hobbies & Special Interest") Hobbies & Special Interest
   option(value="Home & Lifestyle") Home & Lifestyle
   option(value="Music") Music
   option(value="Other") Other
   option(value="Performing & Visual Arts") Performing & Visual Arts
   option(value="Religion & Spirituality") Religion & Spirituality
   option(value="School Activities") School Activities
   option(value="Science & Technology") Science & Technology
   option(value="Seasonal & Holiday") Seasonal & Holiday
   option(value="Sports & Fitness") Sports & Fitness
   option(value="Travel & Outdoor") Travel & Outdoor
.form-group
  label(for="pay") TICKETS(If you want to create a pay ticket, you must set the price)
  .row
   .col-md-4
    .input-group
     .input-group-addon
      input.form-control(name="check", type="checkbox", aria-label="...", value="FREE")
      input.form-control(type="text", placeholder="Free Ticket")
   .col-md-4
    .input-group
     .input-group-addon
      input.form-control(type="checkbox", name="check", aria-label="...")
      input.form-control(type="text", name="pay", placeholder="Pay Ticket", value=question.pay)
.form-group
  label(for="tags") Tags
  input.form-control(type="text", name="tags", placeholder="tags separated by spaces", value=question.tags ? question.tags.join(" ") : "")
